<Page x:Class="Keepass2.NewSafePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Keepass2"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="NewSafePasswordPage">

    <StackPanel>
        <TextBlock FontSize="24"
                   Foreground="White">
            Create your Master Password
        </TextBlock>
        <PasswordBox x:Name="PasswordBox"
                     PasswordChanged="OnPasswordChanged"></PasswordBox>
        <PasswordBox x:Name="RepeatPasswordBox"></PasswordBox>
        <Button Click="Button_Click">Done</Button>
    </StackPanel>
</Page>
